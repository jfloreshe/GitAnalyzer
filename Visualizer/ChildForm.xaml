<Window x:Class="Visualizer.ChildForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visualizer"
        mc:Ignorable="d" FontSize="24"
        Title="ChildForm" Height="200" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock>Child Form</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button Content="Update Count" Click="Button_Click"/>
                <TextBlock x:Name="Counter" Margin="5">0</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
